extends layout

block content 
  h1.mt-3 #{title}
  form(action="/articles/add", method="post")
    .form-group
      label Title:
      br
      input.form-controll(name='title', style="width: 100%" type='text')
    .form-group
      label Author:
      br
      input.form-controll(name='author', style="width: 100%" type='text')
    .form-group
      label Body:
      br
      textarea.form-controll(name='body' style="width: 100%; height: 150px;")
    input.btn.btn-primary(type='submit', value='Qo\'shish')