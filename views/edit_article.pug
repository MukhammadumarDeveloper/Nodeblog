extends layout

block content 
  h1.mt-3 #{title}
  form(method="post", action="/articles/edit/" + article._id)
    .form-group
      label Title:
      br
      input.form-controll(name='title', style="width: 100%" value=article.title type='text')
    .form-group
      label Author:
      br
      input.form-controll(name='author', value=article.author style="width: 100%" type='text')
    .form-group
      label Body:
      br
      textarea.form-controll(name='body' style="width: 100%; height: 150px;")=article.body
    input.btn.btn-primary(type='submit', value='Yangilash')